# This tmux statusbar config was created by tmuxline.vim
# on Sat, 08 Nov 2014
# 0 dark gray
# 109 Cyan
# 239 Gray
# 235 Blackish

set -g status "on"
set -g status-bg "colour0"
set -g status-justify "left"
set -g status-left "#[fg=colour235,bg=colour109,bold] #S #[fg=colour109,bg=colour0,nobold,nounderscore,noitalics]"
set -g status-left-length "100"
set -g status-right "#[fg=colour109,bg=colour0,nobold,nounderscore,noitalics]#[fg=colour235,bg=colour109] %R "
set -g status-right-length "100"
setw -g window-status-current-format "#[fg=colour0,bg=colour239,nobold,nounderscore,noitalics]#[fg=colour250,bg=colour239] #I #W #[fg=colour239,bg=colour0,nobold,nounderscore,noitalics]"
setw -g window-status-format "#[fg=colour109,bg=colour0,nobold,nounderscore,noitalics]#[default] #I #W #[fg=colour0,bg=colour0,nobold,nounderscore,noitalics]"
setw -g window-status-separator ""
