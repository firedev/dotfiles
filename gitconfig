[alias]
  o = !hub browse
  pushup = !git push origin `git symbolic-ref HEAD --short` -u
  cleanup = !git checkout master && git pull --rebase && \
             git remote prune origin && git branch --merged | \
             grep -v "\\*" | xargs -n 1 git branch -d
